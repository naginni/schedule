<div class="row"> 
   <div class="col-xs-12">
       <h1>Listado Usuarios</h1>
  </div>

  <div class="col-xs-12">
     <div class="row">
       <div class="col-xs-offset-11 col-xs-1 pull-right">
	 <%= link_to sign_up_path do %>
	    <span class="glyphicon glyphicon-ok-sign btn-lg"></span>
	 <% end %>
       </div>
     </div>
     <div class="row">
       <div class="col-xs-12">
	 <table class="table table-striped"> 
	    <thead>
	       <tr>
		  <th>Cedula</th>
		  <th>Nombre</th>
		  <th>Apellido</th>
		  <th>Perfil</th>
		  <th>Especilidad</th>
		  <th>Email</th>
		  <th>Detalle</th>
		  <th>Editar</th>
	       </tr>
	    </thead>
	    <tbody>
	     <% @users.each do |user| %>
		<tr> 
		 <td><%= user.cc %></td>
		 <td><%= user.nombre %></td> 
		 <td><%= user.apellido %></td> 
		 <td><%= user.perfil %></td> 
		 <td><%= user.especialidad %></td> 
		 <td><%= user.email %></td> 
		 <td>
		    <%= link_to user do %>
		       <span class="glyphicon glyphicon-eye-open"></span>
		    <% end %>
		</td> 
		 <td>
		    <%= link_to edit_user_path(user) do %>
		       <span class="glyphicon glyphicon-edit"></span>
		    <% end %>
		</td> 
	       </tr>
	     <% end %>
	    </tbody>
	 </table>
       </div>
     </div>
  </div>
  <div class="col-xs-12 pagination">
     <%= will_paginate @users %>
  </div>
</div> 

