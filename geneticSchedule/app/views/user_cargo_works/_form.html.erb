</script>

<div class="row">
  <%= form_for(@medico_cargo, :html => {:class => 'form-inline'}) do |f| %>

     <div class="col-xs-12">
	<% if @medico_cargo.errors.any? %>
	    <div class="alert alert-danger alert-dismissible" role="alert">
	      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      <strong>Error!</strong> <%= pluralize(@medico_cargo.errors.count, "error") %> informacion no validad para ser guardada:
	    </div>

	    <% @medico_cargo.errors.full_messages.each do |message| %>
	       <div class="alert alert-danger alert-dismissible" role="alert">
		 <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		 <strong>Error!</strong> <%= message %>
	       </div>
	    <% end %>
	<% end %>
     </div>
     
     <div class="form-group">
	  <%= f.label :monday, "Lunes", class: 'col-sm-offset-1 col-sm-2 control-label' %><br>
       <div class="col-sm-2">
	  <%= f.text_field :monday, :class => 'form-control', :onkeypress => "return numberOnly(this, event)", :maxlength => 1, :size => 8 %>
       </div>
     </div>
     <div class="form-group">
	  <%= f.label :tuesday, "Martes", class: 'col-sm-offset-1 col-sm-2 control-label' %><br>
       <div class="col-sm-2">
	  <%= f.text_field :tuesday, :class => 'form-control', :onkeypress => "return numberOnly(this, event)", :maxlength => 1, :size => 8 %>
       </div>
     </div>
     <div class="form-group">
	  <%= f.label :wednesday, "Miercoles", class: 'col-sm-offset-1 col-sm-2 control-label' %><br>
       <div class="col-sm-2">
	  <%= f.text_field :wednesday, :class => 'form-control', :onkeypress => "return numberOnly(this, event)", :maxlength => 1, :size => 8 %>
       </div>
     </div>
     <div class="form-group">
	  <%= f.label :thursday, "Jueves", class: 'col-sm-offset-1 col-sm-2 control-label' %><br>
       <div class="col-sm-2">
	  <%= f.text_field :thursday, :class => 'form-control', :onkeypress => "return numberOnly(this, event)", :maxlength => 1, :size => 8 %>
       </div>
     </div>
     <div class="form-group">
	  <%= f.label :friday, "Viernes", class: 'col-sm-offset-1 col-sm-2 control-label' %><br>
       <div class="col-sm-2">
	  <%= f.text_field :friday, :class => 'form-control', :onkeypress => "return numberOnly(this, event)", :maxlength => 1, :size => 8 %>
       </div>
     </div>
     <div class="form-group">
       <div class="col-sm-11">
	  <%= f.submit "Aceptar", :class => 'btn btn-default pull-right' %>
       </div>
     </div> 
   <% end %>
</div>
