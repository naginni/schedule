<div class="row"> 
   <div class="col-sm-12">
       <h1>Detalles del cargo</h1>
  </div>

  <div class="col-xs-0 col-sm-3"></div>
  <div class="col-xs-0 col-sm-6">
     <div class="row">
       <div class="col-xs-offset-9 col-xs-3 pull-right">
	 <%= link_to cargos_path do %>
	    <span class="glyphicon glyphicon-arrow-left btn-lg"></span>
	 <% end %>
	 <%= link_to edit_cargo_path(@cargo) do %>
	    <span class="glyphicon glyphicon-ok-sign btn-lg"></span>
	 <% end %>
       </div>
     </div>
     <div class="row">
       <div class="col-xs-12">
	 <table class="table table-hover"> 
	    <tbody>
	       <tr>
		  <td><strong>Codigo</strong></td>
		  <td><%= @cargo.nombre %></td>
	       </tr>
	       <tr>
		  <td><strong>Nombre</strong></td>
		  <td><%= @cargo.cups %></td>
	       </tr>
	    </tbody>
	 </table>
       </div>
     </div>
  </div>
  <div class="col-xs-0 col-sm-3"></div>
</div> 
