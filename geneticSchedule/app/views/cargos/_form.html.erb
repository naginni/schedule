<div class="col-xs-0 col-sm-3"></div>
  <div class="col-xs-0 col-sm-6">
     <div class="row">
       <div class="col-xs-offset-10 col-xs-2 pull-right">
	 <%= link_to cargos_path do %>
	    <span class="glyphicon glyphicon-arrow-left btn-lg"></span>
	 <% end %>
       </div>
     </div>
     <div class="row">
	<%= form_for(@cargo, :html => {:class => 'form-horizontal'}) do |f| %>

	   <div class="col-xs-12">
	      <% if @cargo.errors.any? %>
		  <div class="alert alert-danger alert-dismissible" role="alert">
		    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		    <strong>Error!</strong> <%= pluralize(@cargo.errors.count, "error") %> informacion no validad para ser guardada:
		  </div>

		  <% @cargo.errors.full_messages.each do |message| %>
		     <div class="alert alert-danger alert-dismissible" role="alert">
		       <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		       <strong>Error!</strong> <%= message %>
		     </div>
		  <% end %>
	      <% end %>
           </div>
	   
	   <div class="form-group">
		<%= f.label :nombre, "Codigo", class: 'col-sm-offset-1 col-sm-2 control-label' %><br>
	     <div class="col-sm-8">
		<%= f.text_field :nombre, :class => 'form-control' %>
	     </div>
	   </div>
	   <div class="form-group">
		<%= f.label :cups, "Nombre", class: 'col-sm-offset-1 col-sm-2 control-label' %><br>
	     <div class="col-sm-8">
		<%= f.text_field :cups, :class => 'form-control' %>
	     </div>
	   </div>
	   <div class="form-group">
	     <div class="col-sm-11">
		<%= f.submit "Aceptar", :class => 'btn btn-default pull-right' %>
	     </div>
	   </div> 
	 <% end %>
     </div>
  </div>
  <div class="col-xs-0 col-sm-3"></div>
