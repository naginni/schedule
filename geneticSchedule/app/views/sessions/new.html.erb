<div class="row">
   <div class="col-xs-0 col-sm-4">
   </div>
   <div class="col-xs-12 col-sm-4 login_box">
      <div class="row login_title">
	 <h1>Log in</h1>
      </div>
      <div class="row">
	 <%= form_tag sessions_path, :class => 'form-horizontal' do %>
	   <div class="form-group">
	      <%= label_tag :email, nil, class: 'col-sm-offset-1 col-sm-2 control-label' %><br />
	     <div class="col-sm-7">
		<%= text_field_tag :email, params[:email], :class => 'form-control' %>
	     </div>
	   </div>
	   <div class="form-group">
	     <%= label_tag :password , nil, class: 'col-sm-offset-1 col-sm-2 control-label' %><br />
	     <div class="col-sm-7">
	       <%= password_field_tag :password, nil, class:  'form-control' %>
	     </div>
	   </div>
	   <div class="form-group">
	     <div class="col-sm-offset-1 col-sm-2">
	       <% flash.each do |name, msg| %>
		 <%= content_tag :div, msg, :id => "flash_#{name}" %>
	       <% end %>
	     </div>
	     <div class="col-sm-7">
		<%= submit_tag "Log in", :class => 'btn btn-default pull-right' %>
	     </div>
	   </div>
	 <% end %>
      </div>
   </div>
   <div class="col-xs-0 col-sm-4">
   </div>

</div>
